<html tal:omit-tag=""
  tal:define="
    view here;
    model request/model;
    root_url model/get_root_url;
    title model/get_title_editable;
    vein string:edit;"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="silva">

<metal:define-macro define-macro="editor"
  tal:define="icon python:view.render_icon(model)">
<table class="columns columns3">
  <tbody>
    <tr>
      <tal:block replace="nothing">
        _____________________ sidebar _____________________
      </tal:block>
      <td class="left"
        tal:define="template_id string:tab_edit">
        <metal:block use-macro="view/macro_vein_navigation/macros/vein" />
      </td>

      <tal:block replace="nothing">
        _____________________ main _____________________
      </tal:block>
      <td class="main">

<form method="post" name="form" action=".">
  <table class="listing">
    <thead
      tal:define="meta_type model/meta_type">
      <tal:block replace="nothing">
        ______________ vein + title row ______________
      </tal:block>
      <tr>
        <td class="top"
          colspan="2">
          <h2>
            <img tal:replace="structure icon" />
            <span style="text-transform:lowercase;"
              tal:content="meta_type">meta type</span>
            &#xab;<tal:block content="model/get_title_or_id" />&#xbb;
          </h2>
        </td>
      </tr>
      <tal:block replace="nothing">
        ______________ top controls row ______________
      </tal:block>
      <metal:block define-slot='title_metadata'>
      <tr class="top-controls">
        <td colspan="2">
          <h3 i18n:translate="">
            characterization
          </h3>
        </td>
      </tr>
      </metal:block>
    </thead>

    <metal:block define-slot='title_editor'>
    <tbody tal:define="fields view/form/get_fields">
      <tr>
        <th class="align-right"
          width="12%"
          i18n:translate="">
          element
        </th>
        <th i18n:translate="">
          content
        </th>
      </tr>

      <tal:repeat repeat="field fields">
      <tal:define define="iterate repeat/field/odd">
      <tr tal:attributes="class python:iterate and 'odd' or 'even'">
        <td class="field-title">
          <label tal:content="structure field/title"
            tal:attributes="for string:field_${field/id}">
            title
          </label><span class="warning"
            tal:condition="field/is_required">*</span>
        </td>
        <td>
          <input tal:replace="structure python:field.render_from_request(request)" />
        </td>
      </tr>
      </tal:define>
      </tal:repeat>
    </tbody>

    <tfoot>
      <tr class="controls">
        <td class="align-right"
          colspan="2">
          <input class="button"
            type="submit"
            name="submit:method"
            value="save"
            title="access key: alt-s"
            accesskey="s"
            i18n:attributes="title;value"
          />
        </td>
      </tr>
    </tfoot>
    </metal:block>
  </table>
</form>

<metal:define-slot define-slot="additional_tools" />

      </td>
      <tal:block replace="nothing">
        _____________________ right column _____________________
      </tal:block>
      <td class="right">
        <metal:block define-slot="info" />
      </td>
    </tr>
  </tbody>
</table>
</metal:define-macro>



<tal:block replace="nothing">
  ______________ this macro fills the additional_tools slot (just above) ______________
  ______________ for File and Image ______________
</tal:block>
<metal:define-macro define-macro="uploader">
<form method="post"
  action="."
  name="form"
  enctype="multipart/form-data">
  <table class="listing">
    <thead>
      <tal:block replace="nothing">
        ______________ inter-controls row ______________
      </tal:block>
      <tr class="inter-controls">
        <td colspan="2">
          <h3 i18n:translate="">
            upload
          </h3>
        </td>
      </tr>
    </thead>
    <tbody tal:define="fields python:view.upload_form.get_fields()">
      <tr>
        <th class="align-right"
          width="12%">
        </th>
        <th i18n:translate="">
          content
        </th>
      </tr>

      <tal:repeat repeat="field fields">
      <tal:define define="iterate repeat/field/odd">
      <tr tal:attributes="class python: iterate and 'odd' or 'even'">
      <td class="field-title">
        <label accesskey="f"
          tal:content="structure field/title"
          tal:attributes="for string:field_${field/id}">
          title
        </label><span class="warning"
          tal:condition="field/is_required">*</span>
      </td>
      <td>
        <input tal:replace="structure python:field.render_from_request(request)" />
      </td>
      </tr>
      </tal:define>
      </tal:repeat>
    </tbody>

    <tfoot>
      <tr class="controls">
        <td class="align-right"
          colspan="2">
          <input class="button"
            type="submit"
            name="upload_submit:method"
            value="upload file"
            title="access key: alt-u"
            accesskey="u"
            i18n:attributes="value;title"
          />
        </td>
      </tr>
    </tfoot>
  </table>
</form>
</metal:define-macro>

</html>
