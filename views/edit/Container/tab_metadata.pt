<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html tal:omit-tag=""
  lang="en"
  xml:lang="en"
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:notal="http://www.infrae.com/silva/notal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  tal:define="
    global vein string:settings;
    ">

<!-- settings (aka tab_metadata) for Container objects -->
<metal:block use-macro="here/macro_index/macros/master">
<metal:block fill-slot="main">
<metal:define define-macro="master">
  <table class="columns columns2">
    <tbody>
      <tr>
        <tal:block replace="nothing">
          _____________________ sidebar _____________________
        </tal:block>
        <td class="left">
          <metal:use-macro use-macro="view/macro_vein_navigation/macros/vein">
            <metal:fill-slot fill-slot="sidebar">
              <tal:block replace="structure python: view.service_sidebar.render(model, 'tab_metadata', vein)" />
            </metal:fill-slot>
          </metal:use-macro>
        </td>

        <tal:block replace="nothing">
          _____________________ main _____________________
        </tal:block>
        
        <td class="main">
          <form method="POST" name="form" action=".">
            <table class="listing">
              <thead>
                  
                <tr tal:replace="nothing">
                  ______________ vein + title row ______________
                </tr>
                <tr>
                  <td class="top">
                    <h2 tal:attributes="title string:id: ${model/id}">
                      <img tal:replace="structure python:view.render_icon(model)" />                      
                      &#xab;<tal:block content="title" />&#xbb;
                    </h2>
                  </td>
                </tr>

                <tr tal:replace="nothing">
                  ______________ top controls row ______________
                </tr>
                <tr class="top-controls"
                  tal:condition="may_change_content">
                  <td class="align-right">
                    <div class="controls">
                      <tal:block condition="python:type == 'Silva Folder'">
                        <a class="button"
                          style="float:left;"
                          href="tab_edit_to_publication"
                          title="change Folder into Publication: alt-c"
                          accesskey="c">
                          convert to publication
                        </a>
                      </tal:block>
                      <tal:block condition="python:type == 'Silva Publication'">
                        <a class="button"
                          style="float:left;"
                          href="tab_edit_to_folder"
                          title="change Publication into Folder: alt-c"
                          accesskey="c">
                          convert to folder
                        </a>
                      </tal:block>
                      <a class="navigation"
                        href="settings_addables"
                        title="change the addables allowed in this publication: alt-a"
                        accesskey="c"
                        tal:condition="python:type == 'Silva Publication' or type == 'Silva Root'">
                        configure <u>a</u>ddables...
                      </a>
                    </div>
                  </td>
                </tr>
              </thead>
            </table>
          </form>

          <metal:headslot define-slot="more_control" />

          <tal:block define="version model">
            <metal:block use-macro="here/macro_metadata/macros/edit_table" />
          </tal:block>
        </td>
      </tr>
    </tbody>
  </table>
  
</metal:define>
</metal:block>
</metal:block>
</html>
