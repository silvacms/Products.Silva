<dtml-let last_modified="_.DateTime()-14" expires="_.DateTime()+7" root="get_root_url()">
<dtml-call "REQUEST.RESPONSE.setHeader( 'Content-Type', 'text/css' )">
<dtml-call "REQUEST.RESPONSE.setHeader( 'Last-Modified', last_modified.toZone('GMT').rfc822() )">
<dtml-call "REQUEST.RESPONSE.setHeader( 'Cache-Control', 'max-age=36000, must-revalidate' )">
<dtml-call "REQUEST.RESPONSE.setHeader( 'Expires', expires.toZone('GMT').rfc822() )">

div.kupu-fulleditor {
  font-family: Verdana, Arial, Helvetica, sans-serif;
  margin: 0;
  height: 100%;
}

div.kupu-fulleditor .kupu-editorframe {
}

div.kupu-smalleditor .kupu-editorframe {
}

div.kupu-smalleditor {
  border: solid 3px ButtonHighlight;
  height: 100%;
}

div.kupu-tb {
  background: #616d73;
  padding: 2px 0 2px 11px;
  margin-bottom: 0em;
  border: 1px solid #475155;
  border-top: none; 
}

#kupu-tb-buttons button {
  color: red;
  border: 1px solid #333;
}

#kupu-tb-buttons button:hover {
  cursor: default;
  border: 1px solid #6bb591;
}

#kupu-tb-buttons button:active {
  border: 1px solid;
  border: 1px solid #6bb591;
}

.kupu-tb-buttongroup {
  margin-left: 2px;
  margin-right: 2px;
}

#kupu-tb-buttons button {
  margin-top: 0;
  margin-left: 0;
  height: 24px;
  width: 24px;
  background-repeat: no-repeat;
}

#kupu-tb-buttons button:hover {
  cursor: pointer;
}

#kupu-tb-buttons button.kupu-logo {
  border: none;
}

span.kupu-tb-buttongroup button.kupu-spellchecker {background-image: url("<dtml-var root>/service_kupu/kupuimages/text-check.png"); background-color: #cedae8;}
span.kupu-tb-buttongroup button.kupu-spellchecker:hover {background-image: url("<dtml-var root>/service_kupu/kupuimages/text-check.png"); background-color: #b3d4bf;}
span.kupu-tb-buttongroup button.kupu-save {background-image: url("<dtml-var root>/service_kupu/kupuimages/save.png"); background-color: #cedae8;}
span.kupu-tb-buttongroup button.kupu-save:hover {background-image: url("<dtml-var root>/service_kupu/kupuimages/save.png"); background-color: #b3d4bf;}
span.kupu-tb-buttongroup button.kupu-logo {background-image: url("<dtml-var root>/service_kupu/kupuimages/kupu_icon.gif"); background-color: transparent;}
span.kupu-tb-buttongroup button.kupu-logo:hover {background-image: url("<dtml-var root>/service_kupu/kupuimages/kupu_icon.gif");}

span.kupu-tb-buttongroup button.kupu-bold {background-image: url("<dtml-var root>/service_kupu/kupuimages/bold.png"); background-color: #cedae8;}
span.kupu-tb-buttongroup button.kupu-bold:hover, span.kupu-tb-buttongroup button.kupu-bold-pressed {background-image: url("<dtml-var root>/service_kupu/kupuimages/bold.png"); background-color: #b3d4bf;}
span.kupu-tb-buttongroup button.kupu-italic {background-image: url("<dtml-var root>/service_kupu/kupuimages/italic.png"); background-color: #cedae8;}
span.kupu-tb-buttongroup button.kupu-italic:hover, span.kupu-tb-buttongroup button.kupu-italic-pressed {background-image: url("<dtml-var root>/service_kupu/kupuimages/italic.png"); background-color: #b3d4bf;}
span.kupu-tb-buttongroup button.kupu-underline {background-image: url("<dtml-var root>/service_kupu/kupuimages/underline.png"); background-color: #cedae8;}
span.kupu-tb-buttongroup button.kupu-underline:hover, span.kupu-tb-buttongroup button.kupu-underline-pressed {background-image: url("<dtml-var root>/service_kupu/kupuimages/underline.png"); background-color: #b3d4bf;}

span.kupu-tb-buttongroup button.kupu-subscript {background-image: url("<dtml-var root>/service_kupu/kupuimages/subscript.png"); background-color: #cedae8;}
span.kupu-tb-buttongroup button.kupu-subscript:hover, span.kupu-tb-buttongroup button.kupu-subscript-pressed {background-image: url("<dtml-var root>/service_kupu/kupuimages/subscript.png"); background-color: #b3d4bf;}
span.kupu-tb-buttongroup button.kupu-superscript {background-image: url("<dtml-var root>/service_kupu/kupuimages/superscript.png"); background-color: #cedae8;}
span.kupu-tb-buttongroup button.kupu-superscript:hover, span.kupu-tb-buttongroup button.kupu-superscript-pressed {background-image: url("<dtml-var root>/service_kupu/kupuimages/superscript.png"); background-color: #b3d4bf;}

span.kupu-tb-buttongroup button.kupu-hilitecolor {display: none;}
span.kupu-tb-buttongroup button.kupu-forecolor {display: none;}

span.kupu-tb-buttongroup button.kupu-inserthorizontalrule {display: none;}

span.kupu-tb-buttongroup button.kupu-justifycenter {display: none;}
span.kupu-tb-buttongroup button.kupu-justifyleft {display: none;}
span.kupu-tb-buttongroup button.kupu-justifyright {display: none;}

span.kupu-tb-buttongroup button.kupu-indent {display: none;}
span.kupu-tb-buttongroup button.kupu-outdent {display: none;}

span.kupu-tb-buttongroup button.kupu-insertunorderedlist {background-image: url("<dtml-var root>/service_kupu/kupuimages/unordered-list.png"); background-color: #cedae8;}
span.kupu-tb-buttongroup button.kupu-insertunorderedlist:hover {background-image: url("<dtml-var root>/service_kupu/kupuimages/unordered-list.png"); background-color: #b3d4bf;}
span.kupu-tb-buttongroup button.kupu-insertorderedlist {background-image: url("<dtml-var root>/service_kupu/kupuimages/ordered-list.png"); background-color: #cedae8;}
span.kupu-tb-buttongroup button.kupu-insertorderedlist:hover {background-image: url("<dtml-var root>/service_kupu/kupuimages/ordered-list.png"); background-color: #b3d4bf;}

span.kupu-tb-buttongroup button.kupu-insertdefinitionlist {background-image: url("<dtml-var root>/service_kupu/kupuimages/definitionlist.png"); background-color: #cedae8;}
span.kupu-tb-buttongroup button.kupu-insertdefinitionlist:hover {background-image: url("<dtml-var root>/service_kupu/kupuimages/definitionlist.png"); background-color: #b3d4bf;}

span.kupu-tb-buttongroup button.kupu-undo {background-image: url("<dtml-var root>/service_kupu/kupuimages/undo.png"); background-color: #cedae8;}
span.kupu-tb-buttongroup button.kupu-undo:hover {background-image: url("<dtml-var root>/service_kupu/kupuimages/undo.png"); background-color: #b3d4bf;}
span.kupu-tb-buttongroup button.kupu-redo {background-image: url("<dtml-var root>/service_kupu/kupuimages/redo.png"); background-color: #cedae8;}
span.kupu-tb-buttongroup button.kupu-redo:hover {background-image: url("<dtml-var root>/service_kupu/kupuimages/redo.png"); background-color: #b3d4bf;}

span.kupu-tb-buttongroup button.kupu-source {background-image: url("<dtml-var root>/service_kupu/kupuimages/view-source.png"); background-color: #cedae8;}

span.kupu-tb-buttongroup button.kupu-hyperlink {background-image: url("<dtml-var root>/service_kupu/kupuimages/link.png"); background-color: #cedae8;}
span.kupu-tb-buttongroup button.kupu-hyperlink-pressed {background-image: url("<dtml-var root>/service_kupu/kupuimages/link.png"); background-color: #b3d4bf;}
span.kupu-tb-buttongroup button.kupu-image {background-image: url("<dtml-var root>/service_kupu/kupuimages/image.png"); background-color: #cedae8;}

div.kupu-tb select {
  color : #333767;
  background: #cedae8;
  border: 1px solid #797f7f;
  vertical-align: top;
}

div.kupu-tb select:hover {
  background: #b3d4bf;
}

#kupu-editor {
  height: 580px;
  margin: 0em;
  border: solid 1px #6c797f;
}

#kupu-editor-textarea {
  height: 580px;
  width: inherit;
  min-width: 100%;
  margin: 0em;
  border: solid 1px #6c797f;
  display: none;
}
/* hack for IE5-6 */
* html #kupu-editor-textarea {
  width:100%;
}


.kupu-toolboxes {
  margin-right: 0em;
  border: solid 1px #6c797f;
  border-bottom-width: 2px;
  background: #cedae8;
  font-size:1em;
}

div.kupu-toolbox, div.kupu-toolbox-active {
  background: #cedae8;
  margin-top: 0;
  margin-bottom: 0;
}

div.kupu-toolbox-active {
  background: #d6efff;
  color: red;
}

div.kupu-toolbox h1, div.kupu-toolbox-active h1 {
  font-family: Verdana, Arial, Helvetica, sans-serif;
  font-size: 1.1em;
  font-weight: normal;
  color: #ecfff3;
  background-image: url('<dtml-var root>/service_kupu_silva/closed_arrow.gif');
  background-repeat: no-repeat;
  background-position: center left;
  background-color: #829199;
  width: inherit;
  max-width: 22em;
  margin-top: 0;
  margin-bottom: 0px;
  padding-left: 14px;
  border: solid 1px #6c797f;
  border-style: solid none none none;
  text-align: left;
  cursor: default;
}

div.kupu-toolbox h1.kupu-toolbox-heading-opened, 
div.kupu-toolbox-active h1.kupu-toolbox-heading-opened {
  background-image: url('<dtml-var root>/service_kupu_silva/opened_arrow.gif');
}

div.kupu-tooltray {
  margin: 0;
  padding: 0.3em;
  color: #333;
  font-family: "Lucida Grande", "Lucida Sans Unicode", Arial, Helvetica, sans-serif;
  line-height: 110%;
}

div.kupu-tooltray table td {
  padding: 0 0.1em 0;
}

/* seems to keep IE (inc 7) in check without anything else */ 
div.kupu-tooltray input.button {
  overflow: visible; 
}
/* improves problem with long values in string inputs in IE 7 */ 
div.kupu-tooltray input.store {
  overflow: visible;
}

div.kupu-toolbox-label, span.kupu-toolbox-searchterm, 
input.kupu-toolbox-st, button.kupu-toolbox-action, 
div.kupu-toolbox-results {
  margin-left: 0.2em;
  margin-right: 0.2em;
}

div.kupu-toolbox-label {
  margin-bottom: 0.4em;
}

div.kupu-toolbox-results {
  border: solid 2px #6c797f;
  margin-top: 0.8em;
  text-decoration: underline;
  padding: 0.2em;
  display: none;
}


table#kupu-toolbox-addtable {
}


table#kupu-toolbox-edittable {
  display: none;
}


div#kupu-colorchooser {
  position: absolute;
  visibility: hidden;
  border: solid black 1px;
  background-color: white;
  padding: 0.2em;
  font-size: small;
}

div#kupu-fgcolorchooser div:hover {
  /* border: outset 1px; */
}

#kupu-toolbox-properties {
  display: none;
}

#kupu-toolbox-properties .metadata-input {
  width: 16em;
}

#kupu-properties-description {
  width: 22em;
}

#kupu-properties input, #kupu-properties-description {
  font-size: x-small;
  font-family: "Lucida Grande", "Lucida Sans Unicode", Arial, Helvetica, sans-serif;

}

div.kupu-properties-checkbox-outerdiv h2 {
  font-size: 1.1em;
  font-weight: normal;
  color: #eCFFF3;
  background-color: #9AACB6;
  width: inherit;
  max-width: 22em;
  margin-top: 0em;
  margin-bottom: 0em;
  margin-left:-0.6em;
  margin-right:-1.2em;
  padding: 0px;
  padding-left: 0.8em;
  border: solid 1px #6c797f;
  border-style: solid none none none;
  text-align: left;
  cursor: default;
}

#kupu-toolbox-properties h1.kupu-toolbox-heading-opened {
  margin-bottom:-0.3em;
}

div.kupu-properties-checkbox-outerdiv{
  margin-top: -0.4em;
}

div.kupu-properties-checkbox-innerdiv {
  margin-bottom: 2.2em;
}

.kupu-properties-checkbox-line {
}

.kupu-properties-checkbox-input {
  clear: left;
  float: left;
}

.kupu-properties-checkbox-item-title {
  float: left;
}

#kupu-toolbox-debug {
  display: none;
}

.kupu-tooltray a {
  color: #187374;
  text-decoration: none;
}

.kupu-tooltray a.rollover span {
  display: none;
}

.kupu-tooltray a.rollover:hover {  
  text-decoration: none;
}

.kupu-tooltray span.tooltip {
  color: #444;
  background: #e3f1da;
  margin: 2em 0 0;
  padding: 0.1em 0.2em 0.2em;
  border: 1px solid #797f7f;
  display: none;
}

.kupu-tooltray a.rollover:hover span {
  display:block;
  position:absolute;
  width:21.5em;
}

.kupu-tooltray a.requiredfield {
 border-bottom: 1px solid #cc0000;
}

</dtml-let>
