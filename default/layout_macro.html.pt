<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="silva"
  tal:define="model options/model | here;
  layoutURL python:model.get_layout_folder().absolute_url()"
  metal:define-macro="layout">
<!-- _______ Silva version 0.9.3.0 _______ -->

<head metal:define-slot="head">
  <title metal:define-slot="title"
    tal:content="model/get_title_or_id">doc title</title>
  <!-- Begin metatags -->
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <meta name="subject"
    tal:define="subject python: model.get_metadata_element('silva-extra', 'subject') or nothing"
    tal:condition="subject"
    tal:attributes="content subject" />
  <meta name="description"
    tal:define="description python: model.get_metadata_element('silva-extra', 'content_description') or nothing"
    tal:condition="description"
    tal:attributes="content description" />
  <meta name="keywords"
    tal:define="keywords python: model.get_metadata_element('silva-extra', 'keywords') or nothing"
    tal:condition="keywords"
    tal:attributes="content keywords" />
  <meta name="contact.name"
    tal:define="name python: model.get_metadata_element('silva-extra', 'contactname') or nothing"
    tal:condition="name"
    tal:attributes="content name" />
  <meta name="contact.email"
    tal:define="email python: model.get_metadata_element('silva-extra', 'contactemail') or nothing"
    tal:condition="email"
    tal:attributes="content email" />
  <meta metal:define-slot="meta" tal:omit-tag="" />
  <!-- End metatags -->
  <link rel="shortcut icon"
    tal:attributes="href here/globals/favicon.ico/absolute_url | nothing" />
  <!-- Begin stylesheets -->
  <link rel="stylesheet" href="frontend.css" type="text/css"
    tal:attributes="href string:${layoutURL}/frontend.css" />
  <link metal:define-slot="style" tal:omit-tag="" />
  <!-- End stylesheets -->
  <script metal:define-slot="script" type="text/javascript" tal:omit-tag="">
    <!-- script slot -->
  </script>
</head>

<body metal:define-slot="body">

<metal:block define-slot="page_header">
  <!-- Start page_header slot -->
  <div class="header">
    <a class="icon"
      href="http://www.infrae.com/products/silva" 
      title="Silva info on the Infrae site: alt-i"
      accesskey="i"
      i18n:attributes="title">
      <img src="silva_32.png" width="32" height="32" border="0" alt="Silva"
        tal:attributes="src here/globals/silva_32.png/absolute_url | nothing" />
    </a>
    <metal:block define-slot="top_navigation">
      <!-- Begin top_navigation slot -->
      <span class="breadcrumb"
         style="display:block;">
        <span tal:repeat="item python:model.get_breadcrumbs()" tal:omit-tag=""> 
        <a tal:content="item/get_title_or_id" tal:attributes="href item/absolute_url">Name</a>
        <span tal:condition="not:repeat/item/end" tal:omit-tag="">&middot;</span></span>
      </span>
      <!-- End top_navigation slot -->
    </metal:block>
  </div>
  <!-- End page_header slot -->
</metal:block>

<span tal:replace="nothing"> _______ content area, here the XML is rendered in HTML _______ </span>
<metal:block define-slot="table_of_contents">
  <!-- table_of_contents slot -->
</metal:block>
<div class="public">
  <metal:block define-slot="main">
    <!-- main slot -->
  </metal:block>
</div>
<br />

<metal:block define-slot="page_footer">
  <!-- page_footer slot -->
</metal:block>
</body>
</html>
